{
  "name": "eslint-plugin-slonik",
  "version": "1.0.0",
  "description": "Provides compile-time SQL query validation by checking your raw SQL strings against your actual database schema, catching errors before runtime.",
  "repository": {
    "type": "git",
    "url": "https://github.com/gajus/eslint-plugin-slonik.git"
  },
  "homepage": "https://github.com/gajus/eslint-plugin-slonik",
  "keywords": [
    "eslint",
    "eslint-plugin",
    "slonik",
    "postgresql",
    "postgres",
    "sql",
    "typescript",
    "type-safety",
    "validation"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "type": "module",
  "types": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "main": "dist/index.cjs",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.mts",
        "require": "./dist/index.d.cts",
        "default": "./dist/index.d.ts"
      },
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "unbuild",
    "clean": "rm -rf dist",
    "dev": "unbuild --stub",
    "lint:cspell": "cspell --no-progress .",
    "lint:eslint": "eslint src",
    "lint:eslint!": "eslint src --fix",
    "lint:knip": "knip --exclude exports,types",
    "lint:tsc": "tsc -b",
    "test:vitest": "vitest run --pool=forks --hideSkippedTests=true --reporter=verbose"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@ts-safeql/generate": "^4.1.1",
    "@ts-safeql/shared": "^4.1.1",
    "@ts-safeql/sql-ast": "^4.1.1",
    "@types/node": "^22.13.13",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@typescript-eslint/rule-tester": "^8.53.0",
    "cspell": "^9.6.0",
    "eslint": "^9.39.2",
    "knip": "^5.80.2",
    "libpg-query": "^17.7.3",
    "semantic-release": "^25.0.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "unbuild": "^3.6.1",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "@typescript-eslint/typescript-estree": "^8.53.0",
    "@typescript-eslint/utils": "^8.53.0",
    "chokidar": "^4.0.3",
    "fp-ts": "^2.16.11",
    "pg-connection-string": "2.9.1",
    "postgres": "^3.4.8",
    "quansync": "^0.2.10",
    "synckit": "^0.10.3",
    "ts-pattern": "^5.9.0",
    "tsx": "^4.21.0",
    "zod": "^4.3.5"
  },
  "peerDependencies": {
    "libpg-query": ">=13.2.5"
  },
  "packageManager": "pnpm@10.28.0"
}
